  <div class="container book_mark-index">
      <p class="midashi text-center">お気に入り</p>
    <div class="row justify-content-center mt-4">
      <div class="col-10 row justify-content-between">
      </div>
    </div>
      <div class="row justify-content-center mt-3">
      <% if @makis.empty? %>
                   <h5>お気に入りがありません</h5>
                   <% else %>
          <div class="col-10">
            <table class="table table-hover">
              <thead class="bg-brown">
                    <tr>
                      <th>場所</th>
                      <th>量</th>
                      <th>価格</th>
                       <th>ステータス</th>
                     </tr>
              </thead>
                <tbody>
                  <% @makis.each do |maki| %>
                    <tr>
                      <td><%= link_to maki.address,makii_path(maki.id) %></td>
                      <td><%= maki.amount %></td>
                      <td><%= maki.cost %>円</td>
                     <% if maki.is_active == true %>
                      <td style="color:blue;">販売中</td>
                     <% elsif maki.is_active == false %>
                      <td style="color:gray;">販売停止中</td>
                     <% end %>
                    </tr>
                  <% end %>
                </tbody>
            </table>
          </div>
      </div>
      <% end %>
    </div>