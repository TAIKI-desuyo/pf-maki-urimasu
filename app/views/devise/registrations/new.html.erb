  <div class='top-bg px-5 px-sm-0'>
    <div class="container">
        <p class="midashi text-center">新規登録ページ</p>
    </div>
    <div class=" mt-5">
        <%= form_with model: @user, url: user_registration_path, local: true, :html => {:id=>'form_id'} do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="container">
            <div class="row justify-content-center mt-5">
              <%= f.label :name,"名前", class: "col-2 font" %>
              <%= f.text_field :name, autofocus: true, class: "col-3 yoyo" %>
            </div>
            <div class=" row justify-content-center mt-4">
              <%= f.label :email, "メールアドレス", class: "col-2 font" %>
              <%= f.email_field :email,autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "col-3 yoyo" %>
            </div>
            <div class="row justify-content-center mt-4">
              <%= f.label :password, "パスワード(6文字以上）", class: "col-2 font" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "col-3 yoyo" %>
            </div>
            <div class="row justify-content-center mt-4">
              <%= f.label :password_confirmation,"パスワード(確認用)",class: "col-2 font" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-3 yoyoy" %>
            </div>
            <div class="row justify-content-center mt-5 mb-5 ml-5">
              <%= link_to '　Sign in　', "", :onclick => "$('#form_id').submit()", class: " btn-animation-border" %>
              <div class="col-1"></div>
            </div>
          </div>

        <% end %>
    </div>
  </div>